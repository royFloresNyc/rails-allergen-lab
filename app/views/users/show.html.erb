<h1><%= @user.name %></h1>

<% if @user.allergic_to.count > 0 %>
    <p><em>Allergic to: </em></p>
    <% @user.allergic_to.each do |ingredient| %>
        <p><em><%= link_to ingredient.name, ingredient_path(ingredient) %></em></p>
    <% end %>
<% else %>
    <p><em>No allergies</em></p>
<% end %>

<% if @user.recipes.count > 0 %>
    <h3>Recipes: </h3>
    <ul>
        <% @user.recipes.each do |recipe| %>
            <li><%= link_to recipe.title, recipe_path(recipe) %></li>
        <% end %>
    </ul>
<% else %>
    <h3>User currently has no recipes.</h3>
<% end %>

<%= button_to "Delete", user_path(@user), method: :delete %>